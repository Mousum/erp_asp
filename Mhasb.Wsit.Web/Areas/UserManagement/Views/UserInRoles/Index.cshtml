@model IEnumerable<Mhasb.Domain.Users.UserInRole>
<div class="container my-dashboard">
    <div class="row">
        <div class="col-md-10">

            <div class="col-md-2">

                @Html.ActionLink("Create New", "Create", new { area = "UserManagement" }, new { @class = "btn btn-success" })
                
            </div>
            <div class="col-md-6 pull-right no-padding">


            </div>


            @*@Html.Action("List")*@
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-10">
                @if (TempData["SucMsg"]!=null)
                {
                    <div class="alert alert-success">@TempData["SucMsg"]</div>
                }
                
                <table class="table table-bordered" style="text-align: center;">
                    <tr>
                        <th>
                            Employee
                        </th>
                        <th>
                            Role
                        </th>
                        @*<th></th>*@
                    </tr>

                    @foreach (var item in Model)
                    {

                        if (item.IsActive)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employees.Users.FirstName)
                                    @Html.DisplayFor(modelItem => item.Employees.Users.LastName)
                                    @*@Html.DisplayFor(modelItem => item.EmployeeId)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Roles.RoleName)
                                </td>
                                @*<td>
                            @Html.ActionLink("Edit", "EditRole", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>*@
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>

