@model IEnumerable<Mhasb.Domain.Users.ActionList>

@{
    ViewBag.Title = "Action List";
}
<style>
    .link {
        margin-bottom: 10px;
        color: #fff;
    }
</style>
<div class="col-md-12">
    <h2>Index</h2>

    <div class="btn btn-success" style="margin-bottom:10px;color:#fff;">
        @Html.ActionLink("Create New", "Create", new { @class = "link" })
        &nbsp;<i class="fa fa-plus-circle">
        </i>
    </div>
    <table class="table table-bordered">
        <tr>
            <th>
               Module Name
            </th>
            <th>
               Controller Name
            </th>
            <th>
                Action Name
            </th>
            <th>
                Name To Show
            </th>
            <th>
                Order No
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ControllerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameToShow)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>