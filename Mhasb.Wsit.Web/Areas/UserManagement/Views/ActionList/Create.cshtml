@model Mhasb.Domain.Users.ActionList

@{
    ViewBag.Title = "CreateActionList";
    Layout = Layout = "~/Areas/UserManagement/Views/Shared/_mhasbLayout.cshtml";
}

<div class="container my-dashboard">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="welcome">
                <h4><a href="#">Create Action</a></h4>

            </div>
            @using (Html.BeginForm(new { @class = "organization-details-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group ">
                    @Html.LabelFor(model=>model.ModuleName)
                    @Html.TextBoxFor(model => model.ModuleName, htmlAttributes: new { @class = "form-control", placeholder = "Module Name", id = "role_name", validate = "RequiredField", style = "border:1px solid #b6b6b6;" })
                    @Html.ValidationMessageFor(model => model.ModuleName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ControllerName)
                    @Html.TextBoxFor(model => model.ControllerName, htmlAttributes: new { @class = "form-control", placeholder = "Controller Name", id = "remarks", validate = "RequiredField", style = "border:1px solid #b6b6b6;" })
                    @Html.ValidationMessageFor(model => model.ControllerName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ActionName)
                    @Html.TextBoxFor(model => model.ActionName, htmlAttributes: new { @class = "form-control", placeholder = "Action Name", id = "remarks", validate = "RequiredField", style = "border:1px solid #b6b6b6;" })
                    @Html.ValidationMessageFor(model => model.ActionName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NameToShow)
                    @Html.TextBoxFor(model => model.NameToShow, htmlAttributes: new { @class = "form-control", placeholder = "Name To Show", id = "remarks", validate = "RequiredField", style = "border:1px solid #b6b6b6;" })
                    @Html.ValidationMessageFor(model => model.NameToShow)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.OrderNo)
                    @Html.TextBoxFor(model => model.OrderNo, htmlAttributes: new { @class = "form-control", placeholder = "Order No", id = "remarks", validate = "RequiredField", style = "border:1px solid #b6b6b6;" })
                    @Html.ValidationMessageFor(model => model.OrderNo)
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-default btn-success" type="submit" style="margin-bottom:10px;">Save</button>
                    </div>
                </div>
            }

        </div>
    </div>

    @*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@


