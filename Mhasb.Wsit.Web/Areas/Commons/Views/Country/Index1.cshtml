@section scripts
{
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $.get('@Url.Action("List", "Country", new { Area = "Commons" })' + '?page=', function (data) {
                $('#CountryListShow').html(data);
            }
            );
