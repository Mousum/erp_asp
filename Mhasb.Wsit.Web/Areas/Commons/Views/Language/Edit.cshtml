@model Mhasb.Domain.Commons.Language

<div class="container my-dashboard">
    <div class="row clearfix">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Language</h4>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="row cstm-frm-row">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.LanguageName)
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.LanguageName, new { @class = "cstm-input" })
                            @Html.ValidationMessageFor(model => model.LanguageName)
                        </div>
                    </div>

                    <div class="row cstm-frm-row">
                        <div class="col-md-8">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jqueryval")


