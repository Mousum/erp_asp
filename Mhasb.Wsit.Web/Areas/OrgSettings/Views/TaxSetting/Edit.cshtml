@model Mhasb.Domain.OrgSettings.TaxSetting

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TaxSetting</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CompanyId)
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="col-xs-12 col-sm-12 alert-danger">
                <div class="form-group text-center">
                    @Html.ValidationMessage("msg")
                </div>
            </div>
        }


        <div class="form-group">
            @Html.LabelFor(model => model.TaxBasis, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaxBasis)
                @Html.ValidationMessageFor(model => model.TaxBasis)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaxId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaxId)
                @Html.ValidationMessageFor(model => model.TaxId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DisplayName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DisplayName)
                @Html.ValidationMessageFor(model => model.DisplayName)
            </div>
        </div>

      

        <div class="form-group">
            @Html.LabelFor(model => model.FinalcialPeriod, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.FinalcialPeriod)*@
                @Html.DropDownList("FinalcialPeriod", ViewBag.PeriodList as SelectList)
                @Html.ValidationMessageFor(model => model.FinalcialPeriod)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
