                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 column">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label font-padding">Turnover Volume</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.companyProfile.TurnOver, new { @class = "form-control" })
