@model IEnumerable<Mhasb.Domain.Organizations.Founder>


<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <h2 class="text-left task-title">
                Founders
            </h2>
            <div class="btn btn-primary">
                @Html.ActionLink("Add New Founder", "Settings", "Founders", new { area = "OrganizationManagement" })
            </div>
            <div id="alert"></div>
            <table class="table table-bordered table-hover table-condensed data-table">
                <thead>
                    <tr class="table-header">
                        <th>#</th>
                        <th>Founder Name</th>
                        <th>Company Name</th>
                        <th>Telephone</th>
                        <th>Email</th>
                        <th>Number of Shares</th>
                        <th>Total Value Of Shares</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8">
                                <b class="alert-info" style="float:inherit;"> There Are No Project Created</b>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr data-id="@item.Id">
                                <td>2</td>
                                <td>@item.FounderName</td>
                                <td>@item.Companies.DisplayName</td>
                                <td>@item.Tel</td>
                                <td>@item.Email</td>
                                <td>@item.SharesOwned</td>
                                <td>@item.TotalSharesValue</td>
                                <td>
                                    <div class="btn btn-primary">
                                        @Html.ActionLink("Edit", "Update", new { id = item.Id })
                                    </div>
                                </td>
                             </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>