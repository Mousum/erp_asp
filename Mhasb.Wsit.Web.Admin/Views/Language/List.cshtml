<script>
    $(".confirmDelete").click(function () {
        var baseUrl = '@Url.Content("~/")';
        var data = { id: $(this).attr("data-id") }
        $.ajax({
            type: "POST",
            url: baseUrl + "Language/Delete",
            data: data,
            success: function (data) {
                if (data == "Success") {
                    $('.close').trigger('click');
                    $(".alert").text("Successfully Deleted ! Loading New Data...").show("slow");
                    setTimeout(function () {
                        window.location.replace(baseUrl + "Language");//will redirect to your blog page (an ex: blog.html)
                    }, 2000);

                }
            }
        });
    })
</script>