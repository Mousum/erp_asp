@model Mhasb.Domain.OrgSettings.Currency

@{
    ViewBag.Title = "Create";
}


<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-title">
                <h3>
                    <i class="fa fa-edit"></i>Currency
                </h3>
            </div>
            <div class="box-content">
                @using (Html.BeginForm("Create", "Currency", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="textfield" class="control-label col-sm-2">@Html.LabelFor(model => model.Name)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Name, new { type = "text", name = "textfield", id = "textfield", @class = "form-control" })

                            <span class="help-block">@Html.ValidationMessageFor(model => model.Name)</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield" class="control-label col-sm-2">@Html.LabelFor(model => model.Symbol)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Symbol, new { type = "text", name = "textfield", id = "textfield", @class = "form-control" })

                            <span class="help-block">@Html.ValidationMessageFor(model => model.Symbol)</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield" class="control-label col-sm-2">@Html.LabelFor(model => model.Code)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Code, new { type = "text", name = "textfield", id = "textfield", @class = "form-control" })

                            <span class="help-block">@Html.ValidationMessageFor(model => model.Code)</span>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Create</button>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
                    </div>

                }

            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")

