@model IEnumerable<Mhasb.Domain.AdminUsers.AdminUser>

<div class="row">
    <div class="col-sm-10">
        <div class="box">

            <div class="box-title">
                <h3>
                    <i class="fa fa-table"></i>
                  Admin Users
                </h3>
                <div style="float:right">
                    @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-success" })
                </div>
            </div>
            <div class="box-content nopadding">
                @if (!Model.Any())
                {
                    <div class="alert alert-info"><h3>There are no area time</h3></div>
                }
                else
                {
                    <table class="table table-hover table-nomargin table-bordered">

                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.type)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNo)
                            </th>
                            
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNo)
                                </td>
                                
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class="btn btn-success"}) 
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" }) 
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                </td>
                            </tr>
                        }

                    </table>
                }
            </div>
        </div>
    </div>
</div>
