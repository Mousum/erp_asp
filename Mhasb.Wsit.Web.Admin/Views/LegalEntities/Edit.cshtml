@model Mhasb.Domain.Commons.LegalEntity

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-title">
                <h3>
                    <i class="fa fa-edit"></i>Legal Entities
                </h3>
            </div>
            <div class="box-content">
                @using (Html.BeginForm("Edit", "LegalEntities", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()




                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="textfield" class="control-label col-sm-2">@Html.LabelFor(model => model.LegalEntityName)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.LegalEntityName, new { type = "text", name = "textfield", id = "textfield", @class = "form-control" })

                            <span class="help-block">@Html.ValidationMessageFor(model => model.LegalEntityName)</span>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
                    </div>




                }


            </div>
        </div>
    </div>
</div>
